@model parcial.Models.Players

<h2>Registrar Nuevo Jugador</h2>

<form asp-action="Create" method="post">
    <div class="form-group" style="margin-bottom: 15px;">
      <label asp-for="Nombre"></label>
      <input asp-for="Nombre" class="form-control" />
      <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin-bottom: 15px;">
      <label asp-for="Edad"></label>
      <input asp-for="Edad" type="number" class="form-control" />
      <span asp-validation-for="Edad" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin-bottom: 15px;">
      <label asp-for="Posicion"></label>
      <input asp-for="Posicion" class="form-control" />
      <span asp-validation-for="Posicion" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin-bottom: 15px;">
        <label asp-for="Equipo"></label>
        <select asp-for="Equipo" class="form-control">
            <option value="">Seleccione un equipo</option>
            @foreach (var equipo in ViewBag.Equipos)
            {
                <option value="@equipo.Nombre">@equipo.Nombre</option>
            }
        </select>
        <span asp-validation-for="Equipo" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Registrar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}